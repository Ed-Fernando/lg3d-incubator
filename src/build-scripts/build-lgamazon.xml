<?xml version="1.0" encoding="UTF-8"?>
<project name="lgamazon" default="all" basedir=".">
    <target name="compile" description="Compile LgAmazon">
        <javac debug="true"
                deprecation="false"
                destdir="${build.classes.dir}"
                nowarn="true"
                source="1.5"
                sourcepath=""
                target="1.5">
            <classpath>
                <pathelement location="${classpath}"/>
                <pathelement path="${j3d.classpath}"/>
                <fileset dir="../lg3d-core/ext">
                    <include name="**/*.jar"/>
        </fileset>
            </classpath>
            <src path="${javasrc.dir}"/>
            <include name="org/jdesktop/lg3d/apps/lgamazon/**"/>

        </javac>
    </target>

    <target name="extras" description="Extra steps for LgAmazon build">

        <copy todir="${build.classes.dir}/org/jdesktop/lg3d/apps/lgamazon/resources">
            <fileset dir="${javasrc.dir}/org/jdesktop/lg3d/apps/lgamazon/resources" />
        </copy>

        <copy todir="${build.classes.dir}/org/jdesktop/lg3d/apps/lgamazon/">
            <fileset file="${javasrc.dir}/org/jdesktop/lg3d/apps/lgamazon/amazon.properties" />
            <fileset file="${javasrc.dir}/org/jdesktop/lg3d/apps/lgamazon/lgAmazon.png" />
        </copy>

    </target>

    <target name="jar" depends="compile,extras" description="Jar up the LgAmazon app">
        <jar compress="${jar.compress}" jarfile="${build.app.dir}/LgAmazon.jar">
             <manifest>
                <attribute name="Config-File" value="LgAmazon.lgcfg"/>
             </manifest>
             <fileset dir="${build.classes.dir}/">
                <include name="org/jdesktop/lg3d/apps/lgamazon/**"/>
                <include name="org/jdesktop/lg3d/apps/lgamazon/lgAmazon.png"/>
             </fileset>
             <fileset dir="${src.dir}/config">
                <include name="LgAmazon.lgcfg"/>
             </fileset>
        </jar>
    </target>
</project>
